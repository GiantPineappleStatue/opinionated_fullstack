# Project configuration
PROJECT_NAME=fullstack

# Environment
NODE_ENV=development

# Frontend configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3001/api

# Backend configuration
BACKEND_PORT=3001
PORT=3001

# Database configuration
DB_ENABLED=false  # Set to true when using a real database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=fullstack_db

# Redis/KeyDB configuration
REDIS_ENABLED=false  # Set to true when using a real Redis/KeyDB instance
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session configuration
SESSION_SECRET=your-secret-key
SESSION_NAME=sid

# JWT configuration (for cookie-based tokens)
JWT_ACCESS_SECRET=your-access-token-secret
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_SECRET=super-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# RabbitMQ configuration
RABBITMQ_ENABLED=false  # Set to true when using a real RabbitMQ instance
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE=tasks
RABBITMQ_EXCHANGE=tasks
RABBITMQ_ROUTING_KEY=task

# NATS configuration
NATS_ENABLED=false  # Set to true when using a real NATS instance
NATS_HOST=localhost
NATS_PORT=4222
NATS_MONITORING_PORT=8222
NATS_URL=nats://localhost:4222
NATS_SUBJECT_PREFIX=task

# Python service configuration
PYTHON_HOST=localhost
PYTHON_PORT=8000
PYTHON_APP_ENV=development
PYTHON_DEBUG=true
PYTHON_LOG_LEVEL=DEBUG
PYTHON_SERVICE_URL=http://localhost:8000

# CORS configuration
FRONTEND_URL=http://localhost:3000

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10 