# Project configuration
PROJECT_NAME=fullstack

# Environment
NODE_ENV=development

# Frontend configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3000/
VITE_WS_URL=ws://localhost:3000

# Backend configuration
BACKEND_PORT=3001
PORT=3000

# Database configuration
DB_ENABLED=false  # Set to true when using a real database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=fullstack_db
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=10000

# Redis/KeyDB configuration
REDIS_ENABLED=false  # Set to true when using a real Redis/KeyDB instance
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAX_RECONNECT_ATTEMPTS=5
REDIS_RECONNECT_TIME_WAIT=5000

# Session configuration
SESSION_SECRET=super-secret-session-key-change-in-production
SESSION_NAME=sid
SESSION_TTL=86400
SESSION_COOKIE_MAX_AGE=86400000

# JWT configuration (for cookie-based tokens)
JWT_ACCESS_SECRET=your-access-token-secret
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_SECRET=super-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# RabbitMQ configuration
RABBITMQ_ENABLED=false  # Set to true when using a real RabbitMQ instance
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE=tasks
RABBITMQ_EXCHANGE=tasks
RABBITMQ_ROUTING_KEY=task
RABBITMQ_MAX_RECONNECT_ATTEMPTS=5
RABBITMQ_RECONNECT_TIME_WAIT=5000

# NATS configuration
NATS_ENABLED=false  # Set to true when using a real NATS instance
NATS_HOST=localhost
NATS_PORT=4222
NATS_MONITORING_PORT=8222
NATS_URL=nats://localhost:4222
NATS_SUBJECT_PREFIX=task
NATS_MAX_RECONNECT_ATTEMPTS=5
NATS_RECONNECT_TIME_WAIT=5000

# Python service configuration
PYTHON_HOST=localhost
PYTHON_PORT=8000
PYTHON_APP_ENV=development
PYTHON_DEBUG=true
PYTHON_LOG_LEVEL=DEBUG
PYTHON_SERVICE_URL=http://localhost:8000
PYTHON_SERVICE_PORT=8000
PYTHON_SERVICE_HOST=localhost

# CORS configuration
FRONTEND_URL=http://localhost:5173

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Cache
CACHE_TTL=300
CACHE_MAX_ITEMS=1000

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_FILE_UPLOAD=true
ENABLE_REAL_TIME_UPDATES=true

# Security
BCRYPT_SALT_ROUNDS=10
ENABLE_2FA=false
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPTS_WINDOW=300

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com

# Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true 